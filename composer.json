{
  "name": "thom855j/wp-app",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "composer", "roots", "wordpress", "wp", "wp-config"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=7.1",
    "composer/installers": "^1.7",
    "vlucas/phpdotenv": "^3.6.0",
    "oscarotero/env": "^1.2.0",
    "roots/wordpress": "5.3.2",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "aaemnnosttv/wp-cli-dotenv-command": "^2.0",
    "illuminate/database": "^6.13",
    "illuminate/events": "^6.13",
    "wpackagist-plugin/wp-mvc": "dev-trunk",
    "wpackagist-plugin/w3-total-cache": "dev-trunk",
    "wpackagist-theme/storefront": "2.5.3",
    "wpackagist-plugin/woocommerce": "dev-trunk",
    "wpackagist-plugin/debug-bar": "dev-trunk",
    "wpackagist-plugin/query-monitor": "dev-trunk",
    "wpackagist-plugin/contact-form-7": "dev-trunk",
    "wpackagist-plugin/wordpress-seo": "dev-trunk",
    "wpackagist-plugin/akismet": "dev-trunk",
    "wpackagist-plugin/tinymce-advanced": "dev-trunk",
    "wpackagist-plugin/wordfence": "7.4.5",
    "wpackagist-plugin/elementor": "dev-trunk",
    "wpackagist-plugin/google-analytics-dashboard-for-wp": "dev-trunk",
    "wpackagist-plugin/wp-smushit": "dev-trunk",
    "wpackagist-plugin/autoptimize": "dev-trunk",
    "wpackagist-plugin/webmaster-user-role": "dev-trunk",
    "wpackagist-plugin/wps-hide-login": "dev-trunk",
    "wpackagist-plugin/easy-wp-smtp": "dev-trunk"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4.2",
    "roave/security-advisories": "dev-master"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/wp/wp-modules/{$name}/": ["type:wordpress-muplugin"],
      "web/wp/wp-plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"require('functions.php'); rrmdir('web/wp/wp-content');\"",
      "@php -r \"rename('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
